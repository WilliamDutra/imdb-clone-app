<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="IMDB.Mobile.Popups.MyLists.MyListsPopup">
    <VerticalStackLayout Background="{ StaticResource ColorPrimary }" HeightRequest="300" WidthRequest="250" Spacing="10" Padding="10">
        <Label 
            Text="Minhas listas"
            FontSize="18"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Picker Title="Select a monkey" ItemsSource="{ Binding MyLists }" ItemDisplayBinding="{Binding Name}">
            
        </Picker>


    </VerticalStackLayout>
</toolkit:Popup>