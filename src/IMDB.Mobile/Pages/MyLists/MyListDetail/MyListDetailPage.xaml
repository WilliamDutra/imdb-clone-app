<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IMDB.Mobile.Pages.MyLists.MyListDetail.MyListDetailPage"
             Title="MyListDetailPage">
    <VerticalStackLayout>

        <CollectionView
            ItemsSource="{ Binding ListDetail.Movies }">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Title}" TextColor="White" FontFamily="PoppinsRegular" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
    </VerticalStackLayout>
</ContentPage>