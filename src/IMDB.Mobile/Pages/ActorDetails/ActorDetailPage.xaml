<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="IMDB.Mobile.Pages.ActorDetails.ActorDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
    xmlns:vm="clr-namespace:IMDB.Mobile.Pages.ActorDetails"
    x:Name="actorDetails"
    x:DataType="vm:ActorDetailPageViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <HorizontalStackLayout Grid.Row="0">
            <Label Text="{Binding Name}" TextColor="White" />
            <ffimageloading:CachedImage Source="{Binding Profile}" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>