<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IMDB.Mobile.Pages.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:home="clr-namespace:IMDB.Mobile.Pages.Home"
    xmlns:lists="clr-namespace:IMDB.Mobile.Pages.MyLists"
    xmlns:local="clr-namespace:IMDB.Mobile"
    xmlns:login="clr-namespace:IMDB.Mobile.Pages.Login"
    xmlns:search="clr-namespace:IMDB.Mobile.Pages.Search"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Name="appShell"
    Title="IMDB.Mobile"
    Shell.FlyoutBackgroundColor="{StaticResource ColorPrimary}"
    Shell.FlyoutBehavior="Flyout">

    <Shell.Behaviors>
        <toolkit:EventToCommandBehavior
            BindingContext="{Binding Source={x:Reference appShell}, Path=BindingContext}"
            Command="{Binding InitializeCommand}"
            EventName="Loaded" />
    </Shell.Behaviors>

    <TabBar>
        <Tab Icon="home_icon.png">
            <ShellContent ContentTemplate="{DataTemplate home:HomePage}" />
        </Tab>
        <Tab Icon="search_icon.png">
            <ShellContent ContentTemplate="{DataTemplate search:SearchPage}" />
        </Tab>
        <Tab Icon="list_films_icon.png">
            <ShellContent ContentTemplate="{DataTemplate lists:MyListsPage}" />
        </Tab>
    </TabBar>

    <MenuItem IconImageSource="sign_out.png" Text="Sair">
        <Shell.MenuItemTemplate>
            <DataTemplate>
                <HorizontalStackLayout Padding="10" Spacing="10">
                    <Button
                        BackgroundColor="Transparent"
                        BindingContext="{Binding Source={x:Reference appShell}, Path=BindingContext}"
                        Command="{Binding SairCommand}"
                        ImageSource="sign_out.png"
                        Text="Sair">
                        <Button.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="White" />
                        </Button.Behaviors>
                    </Button>
                </HorizontalStackLayout>
            </DataTemplate>
        </Shell.MenuItemTemplate>
    </MenuItem>

    <Shell.FlyoutHeader>
        <Grid
            Padding="20"
            BackgroundColor="{StaticResource ColorPrimary}"
            ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <toolkit:AvatarView
                Grid.Column="0"
                Background="{StaticResource ColorTertiary}"
                BorderColor="{StaticResource ColorSecondary}"
                ImageSource="{Binding Photo}"
                StrokeThickness="2" />

            <Label Grid.Column="1" VerticalTextAlignment="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span
                            FontFamily="PoppinsRegular"
                            FontSize="20"
                            Text="OlÃ¡ "
                            TextColor="White" />
                        <Span
                            FontFamily="PoppinsRegular"
                            FontSize="20"
                            Text="{Binding Username}"
                            TextColor="White" />
                        <Span
                            FontFamily="PoppinsRegular"
                            FontSize="20"
                            Text=" !"
                            TextColor="White" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </Grid>
    </Shell.FlyoutHeader>



</Shell>
