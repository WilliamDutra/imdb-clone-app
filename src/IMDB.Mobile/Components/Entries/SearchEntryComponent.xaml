<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IMDB.Mobile.Components.Entries.SearchEntryComponent"
             x:Name="this">
    <Border StrokeThickness="5" Background="{ StaticResource ColorTertiary }">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="10" />
        </Border.StrokeShape>
        <Grid BindingContext="{ x:Reference this }" BackgroundColor="{ StaticResource ColorTertiary }" Padding="2" ColumnSpacing="5" VerticalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="search_icon.png" />
            <Entry Grid.Column="1" Placeholder="{ Binding PlaceHolder }" Text="{ Binding TextValue }" FontSize="16" FontFamily="PoppinsRegular" TextColor="White" />
        </Grid>
    </Border>
</ContentView>
