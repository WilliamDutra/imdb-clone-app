<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="IMDB.Mobile.Components.Pills.PillToggleComponent"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="pillToggleComponent"
    MaximumWidthRequest="100">
    <Border
        Background="{StaticResource ColorSecondary}"
        BindingContext="{x:Reference pillToggleComponent}"
        Stroke="{StaticResource ColorSecondary}"
        StrokeThickness="10">
        <Border.GestureRecognizers>
            <TapGestureRecognizer
                Command="{Binding IsPressedCommand}"
                CommandParameter="{Binding Id}"
                Tapped="TapGestureRecognizer_Tapped" />
        </Border.GestureRecognizers>
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="20" />
        </Border.StrokeShape>
        <Label
            FontFamily="PoppinsRegular"
            FontSize="16"
            HorizontalOptions="Center"
            LineBreakMode="TailTruncation"
            Text="{Binding Label}"
            TextColor="White"
            VerticalOptions="Center" />
        <Border.Triggers>
            <DataTrigger
                Binding="{Binding IsPressed}"
                TargetType="Border"
                Value="True">
                <Setter Property="Background" Value="#ffb300" />
                <Setter Property="Stroke" Value="#ffb300" />
            </DataTrigger>
        </Border.Triggers>
    </Border>
</ContentView>
