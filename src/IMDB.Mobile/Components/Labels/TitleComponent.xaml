<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="titleComponent"
             x:Class="IMDB.Mobile.Components.Labels.TitleComponent">
    <Label BindingContext="{ x:Reference titleComponent }">
        <Label.FormattedText>
            <FormattedString>
                <Span FontFamily="PoppinsBold" TextColor="White" FontSize="28" Text="{ Binding TextValue }" />
                <Span FontFamily="PoppinsBold" TextColor="{ StaticResource ColorSecondary }" FontSize="28">.</Span>
            </FormattedString>
        </Label.FormattedText>
    </Label>
</ContentView>
