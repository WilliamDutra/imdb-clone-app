<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="IMDB.Mobile.Components.Cards.CardViewActorComponent"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
    x:Name="cardViewActorComponent">
    <VerticalStackLayout BindingContext="{x:Reference cardViewActorComponent}" Spacing="10">

        <Border Stroke="{StaticResource ColorSecondary}">
            <Border.StrokeShape>
                <Ellipse
                    HeightRequest="{Binding CardHeight}"
                    StrokeThickness="5"
                    WidthRequest="{Binding CardWidth}" />
            </Border.StrokeShape>
            <ffimageloading:CachedImage
                Aspect="AspectFill"
                ErrorPlaceholder="erro_icon_thumb_not_load.png"
                HeightRequest="{Binding CardHeight}"
                Source="{Binding Photo}"
                WidthRequest="{Binding CardWidth}" />
        </Border>

        <Label
            HorizontalOptions="Center"
            Text="{Binding Name}"
            TextColor="White" />

    </VerticalStackLayout>
</ContentView>
