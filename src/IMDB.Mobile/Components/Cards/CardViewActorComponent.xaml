<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
             x:Name="cardViewActorComponent"
             x:Class="IMDB.Mobile.Components.Cards.CardViewActorComponent">
    <VerticalStackLayout BindingContext="{ x:Reference cardViewActorComponent }" Spacing="10">

        <Border Stroke="{ StaticResource ColorSecondary }">
            <Border.StrokeShape>
                <Ellipse StrokeThickness="5" WidthRequest="{ Binding CardWidth }" HeightRequest="{ Binding CardHeight }"/>
            </Border.StrokeShape>
            <ffimageloading:CachedImage Source="{ Binding Photo }" WidthRequest="{ Binding CardWidth }" HeightRequest="{ Binding CardHeight }" Aspect="AspectFill" ErrorPlaceholder="dotnet_bot.png"/>
        </Border>

        <Label HorizontalOptions="Center" Text="{ Binding Name }" TextColor="White" />

    </VerticalStackLayout>
</ContentView>
